{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "local": true,
    "description": "enables the default permissions",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "dialog:default",
        "updater:default",
        "process:default",
        "process:allow-restart",
        "core:path:default",
        {
            "identifier": "fs:allow-read-file",
            "allow": [{ "path": "$APPDATA/**" }, { "path": "$APPDATA/*" }]
        },
        {
            "identifier": "fs:allow-read-dir",
            "allow": [{ "path": "$APPDATA" }, { "path": "$APPDATA/**" }]
        },
        "fs:allow-exists"
    ]
}
