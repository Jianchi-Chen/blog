{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "cjcblog",
    "version": "0.1.0",
    "identifier": "io.jianchi.blog",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "cjcblog",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "center": true
            }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": ["$APPDATA/**"]
            }
        },
        "withGlobalTauri": false
    },
    "bundle": {
        "active": true,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        }
    },
    "plugins": {
        "updater": {
            "endpoints": [
                "https://github.com/Jianchi-Chen/blog/releases/latest/download/latest.json"
            ],
            "dialog": false,
            "active": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRCNTJFOEUxMEYzQkVCMjEKUldRaDZ6c1A0ZWhTUytZTGJvai96cWFjdUNjMzJGSzFyak1OK2t2VExzMDd0OW5zQTNMUkZNaUIK"
        }
    }
}
