{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "cjcblog",
    "version": "0.1.0",
    "identifier": "io.jianchi.blog",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "cjcblog",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "center": true
            }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": ["$APPDATA/**"]
            }
        },
        "withGlobalTauri": false
    },
    "bundle": {
        "active": true,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        },
        "createUpdaterArtifacts": true
    },
    "plugins": {
        "updater": {
            "pubkey": "-----BEGIN PUBLIC KEY-----\ndW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZGN0I5MzMzRjVFOUFGMDMKUldRRHIrbjFNNU43LzlrNmtCdVlMSmVnUWZ1d3djM3pwSUtNeEJIY05nODdVR1VQcDRyRkYyKzAK\n-----END PUBLIC KEY-----",
            "endpoints": ["https://releases.jianchi.blog/latest.json"]
        }
    }
}
